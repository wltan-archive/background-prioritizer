<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/priopick"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="Activate Service" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/priopick"
        android:text="Priority Change Intensity: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <NumberPicker
        android:id="@+id/priopick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/onoff" />

    <EditText
        android:id="@+id/polltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/priopick"
        android:layout_alignRight="@+id/priopick"
        android:layout_below="@+id/priopick"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/polltime"
        android:layout_alignBottom="@+id/polltime"
        android:layout_toLeftOf="@+id/polltime"
        android:text="Prioritization Time Interval: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>